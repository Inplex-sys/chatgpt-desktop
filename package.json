{
    "name": "chatgpt",
    "version": "1.0.0",
    "description": "A simple chatbot assistant",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.chatgpt.assistant",
        "files": [
            "aiprm-extension/**/*",
            "main.js",
            "package.json"
        ],
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        }
    },
    "author": "Inplex-sys",
    "license": "CC0-1.0",
    "devDependencies": {
        "electron": "^25.5.0",
        "electron-builder": "^24.6.4"
    },
    "dependencies": {
        "fs-extra": "^11.1.1"
    }
}
